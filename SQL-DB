CREATE TABLE APP.COMPANY
(COMP_ID INTEGER NOT NULL GENERATED ALWAYS AS IDENTITY (START WITH 1, INCREMENT BY 1),
COMP_NAME VARCHAR(24) NOT NULL,
PASSWORD VARCHAR(24),
EMAIL VARCHAR(24),
PRIMARY KEY (COMP_ID)
) ;

CREATE TABLE APP.CUSTOMER(CUST_ID INTEGER NOT NULL GENERATED ALWAYS AS IDENTITY (START WITH 1, INCREMENT BY 1),
CUST_NAME VARCHAR(24) NOT NULL,
PASSWORD VARCHAR(24),
PRIMARY KEY(CUST_ID) 
);

CREATE TABLE APP.COUPON(id INTEGER NOT NULL GENERATED ALWAYS AS IDENTITY (START WITH 1, INCREMENT BY 1),
TITLE VARCHAR(100),
START_DATE DATE,
END_DATE DATE,
AMOUNT INTEGER,
TYPE VARCHAR(30),
MESSAGE VARCHAR(100),
PRICE DOUBLE,
IMAGE VARCHAR(100),
PRIMARY KEY(id) 
);

CREATE TABLE APP.CUSTOMER_COUPON(
CUST_ID NUMERIC,
COUPON_ID NUMERIC,
PRIMARY KEY (CUST_ID,COUPON_ID));

CREATE TABLE APP.COMPANY_COUPON(
COMP_ID NUMERIC,
COUPON_ID NUMERIC,
PRIMARY KEY (COMP_ID,COUPON_ID));




